@model BookInventory.Models.MsGenre

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h3 class="bd-title" id="content">Detail of Genre</h3>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input disabled asp-for="Name" class="form-control" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <a class="btn btn-sm btn-success" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                            <a class="btn btn-sm btn-dark" asp-action="Index">Back to List</a>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>